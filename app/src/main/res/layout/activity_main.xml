<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Formulário de adição de cursos -->
    <EditText
        android:id="@+id/editNomeCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Curso" />

    <EditText
        android:id="@+id/editLinkCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Link do Curso" />

    <EditText
        android:id="@+id/editDuracaoCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Duração (horas)" />

    <Button
        android:id="@+id/btnAdicionarCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Curso" />

    <!-- Lista de cursos adicionados -->
    <ListView
        android:id="@+id/listViewCursos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />
</LinearLayout>
